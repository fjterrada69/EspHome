substitutions:
  device_name: esp32_telefonillo
  friendly_name: esp32_telefonillo_camara_00_00_00_entradita
  comment: " Un ESP32-CAM con camara y pulsador para el telefonillo de la puerta principal de la casa de Arcos"

esphome:
  name: ${device_name}
  platform: ESP32
  board: nodemcu-32s

<<: !include comun/wifi.yaml
<<: !include comun/api.yaml
<<: !include comun/ota.yaml
<<: !include comun/logger.yaml

#ConfiguraciÃ³n de la camnara
esp32_camera:
  external_clock:
    pin: GPIO0
    frequency: 20MHz
  i2c_pins:
    sda: GPIO26
    scl: GPIO27
  data_pins: [GPIO5, GPIO18, GPIO19, GPIO21, GPIO36, GPIO39, GPIO34, GPIO35]
  vsync_pin: GPIO25
  href_pin: GPIO23
  pixel_clock_pin: GPIO22
  power_down_pin: GPIO32
  resolution: 640x480
  max_framerate: 0.5 fps
  idle_framerate: 0.05 fps
  jpeg_quality: 10
  name: ${friendly_name}_camara

#Switch para reiniciar el ESP32    
switch:
  - platform: restart
    name: ${friendly_name}_restart

binary_sensor:
  - platform: gpio
    pin:
      number: 13
      mode: INPUT_PULLUP
    name: ${friendly_name}_pulsador
    device_class: door
